<h1>Listing bots</h1>

<table>
  <tr>
    <th>Email/Phone</th>
    <th>Bot type</th>
    <th>Page</th>
    <th>Count</th>
    <th>Interval</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bots.each do |bot| %>
  <tr>
    <td><%= bot.email %></td>
    <td><%= bot.bot_type %></td>
    <td><%= bot.page %></td>
    <td><%= bot.count %></td>
    <td><%= bot.interval %></td>
    <td><%= bot.state %></td>
    <td><%= link_to 'Show', bot %></td>
    <td><%= link_to 'Edit', edit_bot_path(bot) %></td>
    <td><%= link_to 'Destroy', bot, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end unless @bots.empty? %>
</table>

<br />

<%= link_to 'New Bot', new_bot_path %>
