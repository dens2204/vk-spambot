<%= form_for @bot, :url => @bot.id ? update_bot_path(@bot) : create_bot_path, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @bot.errors.any? %>
    <div class='alert alert-error'>
      <h2><%= pluralize(@bot.errors.count, 'error') %>:</h2>
      <p>There were problems with the following fields:</p>
      <ul>
      <% @bot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label required' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => "control-label #{@bot.id ? '' : 'required'}" %>
    <div class="controls">
      <%= f.password_field :password, :autocomplete => 'off', :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label required' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'text_field span1', :maxlength => 4 %> - last four phone number digits
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bot_type, :class => 'control-label required' %>
    <div class="controls">
      <%= f.select :bot_type, { 'group' => 'group', 'discussion' => 'discussion'} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :page, :class => 'control-label required' %>
    <div class="controls">
      <%= f.text_field :page, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :page_title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :page_title, :class => 'text_field' %>
    </div>
  </div>
  <% if current_user.admin? %>
	  <div class="control-group">
		<%= f.label :page_hash, :class => 'control-label' %>
		<div class="controls">
		  <%= f.text_field :page_hash, :class => 'text_field' %>
		</div>
	  </div>
  <% end %>
  <div class="control-group">
    <%= f.label :message, :class => 'control-label required' %>
    <div class="controls">
      <%= f.text_area :message, :class => 'text_area', :rows => 10 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :count, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :count, (1..8).to_a.map{|s| [pluralize(s, 'time'), s]} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :interval, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :hours, [['none', 0]] + (1..24).to_a.map{|s| [pluralize(s, 'hour'), s]} %>
      <%= f.select :minutes, [['none', 0]] + (1..60).to_a.map{|s| [pluralize(s, 'minute'), s]} %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  user_bots_path(@bot.user_id), :class => 'btn' %>
    </div>
  </div>
<% end %>
